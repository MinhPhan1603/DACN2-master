@model IEnumerable<DACN2.Models.KSan>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListKhachSan</title>
</head>
<body>
    <p>
        @Html.ActionLink("Tạo mới thông tin khách sạn", "CreateKS")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenKhachSan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diachi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaKS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhuThuPhongDon)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenKhachSan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diachi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaKS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhuThuPhongDon)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa ", "EditKS", new { id=item.MaKS }) |
             
                @Html.ActionLink("Xóa", "DeleteKS", new { id=item.MaKS })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
